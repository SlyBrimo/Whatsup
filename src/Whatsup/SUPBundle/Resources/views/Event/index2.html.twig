{% extends '::base.html.twig' %}
{% block body %}
<h1>Event list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Startdate</th>
            <th>Enddate</th>
            <th>Description</th>
            <th>Flyer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{% if entity.startdate %}{{ entity.startdate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.enddate %}{{ entity.enddate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.flyer }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('event_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('event_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('event_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}